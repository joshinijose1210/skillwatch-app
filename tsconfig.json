{
    "compilerOptions": {
        "baseUrl": "src",
        "allowJs": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true,
        "lib": ["dom", "ES5", "ES2015", "ES2017", "ES2018", "es2020", "es2022", "ESNext"],
        "module": "es2020",
        "moduleResolution": "bundler",
        "noEmit": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": true,
        "target": "esnext",
        "jsx": "react-jsx",
        "types": ["jest", "node", "testing-library__jest-dom", "vite/client", "@vitejs/plugin-react"],
        "allowSyntheticDefaultImports": true,
        "paths": {
            "@common": ["common"],
            "@common/*": ["common/*"],
            "@components": ["components"],
            "@components/*": ["components/*"],
            "@mocks": ["mocks"],
            "@mocks/*": ["mocks/*"],
            "@theme": ["theme"],
            "@theme/*": ["theme/*"],
            "@utils": ["utils"],
            "@utils/*": ["utils/*"],
            "@test-utils": ["utils/test-utils"],
            "@styled": ["utils/styled"],
            "@slice": ["slice"],
            "@slice/*": ["slice/*"],
            "@routes": ["routes"],
            "@routes/*": ["routes/*"],
            "@pages": ["pages"],
            "@pages/*": ["pages/*"],
            "@services/*": ["services/*"],
            "@services": ["services"],
            "@constants": ["constants"],
            "@constants/*": ["constants/*"],
            "@testData": ["testData"],
            "@testData/*": ["testData/*"]
        }
    },
    "include": ["src", "types"],
    "exclude": ["node_modules", "dist", "coverage"]
}
